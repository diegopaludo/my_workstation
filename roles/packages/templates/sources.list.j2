{% if ansible_distribution == "Debian" %}
deb http://security.debian.org/debian-security {{ ansible_distribution_release|lower }}/updates main contrib non-free

deb http://deb.debian.org/debian/ {{ ansible_distribution_release|lower }} main non-free contrib
deb http://deb.debian.org/debian/ {{ ansible_distribution_release|lower }}-updates main contrib non-free

deb http://deb.debian.org/debian/ {{ ansible_distribution_release|lower }}-backports main contrib non-free
{% endif %}

{% if ansible_distribution == "Ubuntu" %}
deb http://security.ubuntu.com/ubuntu {{ ansible_distribution_release|lower }}-security main restricted universe multiverse

deb http://archive.ubuntu.com/ubuntu/ {{ ansible_distribution_release|lower }} main restricted universe multiverse
deb http://archive.ubuntu.com/ubuntu/ {{ ansible_distribution_release|lower }}-updates main restricted universe multiverse

deb http://archive.ubuntu.com/ubuntu/ {{ ansible_distribution_release|lower }}-backports main restricted universe multiverse
{% endif %}
